
@model BTTH1902.Models.BMIModel



<form asp-action="IndexBMI" method="post">
    <div>
        <label asp-for="Name">Tên của bạn là:</label>
        <input asp-for="Name" type="text">
    </div>
    <div>
        <label asp-for="Weight">Cân nặng của bạn (kg): </label>
        <input asp-for="Weight" type="number" step="0.1" />

    </div>
    <div>
        <label asp-for="Height">Chiều cao của bạn (m): </label>
        <input asp-for="Height" type="number" step="0.01" />
   
    </div>
    <button type="submit">Tính BMI</button>
</form>
<h1>Chỉ số BMI của bạn là @ViewBag.Message</h1>